{
  "compilerOptions": {
    "baseUrl": ".",
    "types": ["vite/client", "node"],
    "paths": {
      "@shared/*": ["../shared/*"],
      "@types/*": ["../shared/types"],
      "@constants/*": ["../shared/constants"],
      "@/*": ["src/*"]
    },
    "jsx": "react-jsx",
    "typeRoots": ["./node_modules/@types", "./src/types"],
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true
  },
  "include": ["src", "src/types"]
}
