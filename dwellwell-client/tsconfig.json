// dwellwell-client/tsconfig.json
{
  "extends": "../tsconfig.base.json",
  "compilerOptions": {
    "module": "ESNext",
    "moduleResolution": "bundler",
    "jsx": "react-jsx",
    "noImplicitAny": false,
    "skipLibCheck": true,

    "noEmit": true,                   // <-- add this

    "baseUrl": ".",
    "paths": {
      "@/*": ["src/*"],
      "@shared/*": ["../shared/dist/*"],
      "@constants": ["../shared/dist/constants/index.d.ts"],
      "@constants/*": ["../shared/dist/constants/*"]
    },
    "types": ["vite/client", "node"]
  },
  "include": ["src", "src/types"],
  "exclude": ["node_modules", "dist"]
}
