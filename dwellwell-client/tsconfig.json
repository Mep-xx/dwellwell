{
  "extends": "../tsconfig.base.json",
  "compilerOptions": {
    "module": "ESNext",
    "moduleResolution": "bundler",
    "jsx": "react-jsx",
    "noImplicitAny": false,
    "skipLibCheck": true,

    "baseUrl": ".",
    "paths": {
      "@/*": ["src/*"],

      // Point to built types/entries from shared
      "@shared/*": ["../shared/dist/*"],
      "@constants": ["../shared/dist/constants/index.d.ts"],
      "@constants/*": ["../shared/dist/constants/*"]
    },

    "types": ["vite/client", "node"],
  },
  "include": ["src", "src/types"],
  "exclude": ["node_modules", "dist"]
}
