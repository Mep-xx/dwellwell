{
  "compilerOptions": {
    "target": "ES2020",
    "module": "CommonJS",
    "outDir": "build",
    "strict": true,
    "skipLibCheck": true,
    "esModuleInterop": true,
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "rootDir": "./src",
    "baseUrl": "./",
    "paths": {
      "@shared/*": ["../shared/*"]
    }
  },
  "include": [
    "src",
    "src/prisma"
  ]
}
