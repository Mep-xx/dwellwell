{
  "compilerOptions": {
    "target": "ES2020",
    "module": "CommonJS",
    "outDir": "build",
    "strict": true,
    "skipLibCheck": true,
    "esModuleInterop": true,
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "baseUrl": "./",
    "rootDir": "./src",
    "types": ["node"],
    "typeRoots": ["./node_modules/@types"]
  },
  "include": ["src", "src/global.d.ts"]
}
