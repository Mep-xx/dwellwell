{
  "compilerOptions": {
    "target": "ES2020",
    "module": "CommonJS",
    "outDir": "build",
    "strict": true,
    "skipLibCheck": true,
    "esModuleInterop": true,
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "baseUrl": "./",
    "rootDir": "./",
    "composite": true,                      
    "types": ["node"],
    "typeRoots": ["./node_modules/@types"],
    "paths": {
      "@shared/*": ["../shared/*"]
    }
  },
  "include": ["src", "src/global.d.ts", "../shared/**/*"]
}
