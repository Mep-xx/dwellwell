// dwellwell-api/tsconfig.json
{
  "extends": "../tsconfig.base.json",
  "compilerOptions": {
    "baseUrl": ".",
    "rootDir": ".",
    "outDir": "../build-api",

    "module": "CommonJS",
    "moduleResolution": "Node",

    "esModuleInterop": true,
    "skipLibCheck": true,
    "types": ["node"],

    "paths": {
      "@shared": ["../shared/dist/index"],
      "@shared/*": ["../shared/dist/*"],
      "@constants": ["../shared/dist/constants/index"],
      "@constants/*": ["../shared/dist/constants/*"]
    }
  },
  "include": ["src", "scripts"],
  "exclude": ["node_modules", "../build-api", "../shared/dist"]
}
