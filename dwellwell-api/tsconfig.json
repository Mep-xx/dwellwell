{
  "compilerOptions": {
    "target": "ES2020",
    "module": "CommonJS",
    "outDir": "build",
    "rootDir": "src",
    "strict": true,
    "skipLibCheck": true,
    "esModuleInterop": true,
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "baseUrl": "./",
    "composite": true,
    "typeRoots": ["./node_modules/@types", "./src/types"],
    "types": ["node"],
    "paths": {
      "@shared/*": ["../shared/*"],
      "@constants": ["../shared/constants/index.ts"],
      "@constants/*": ["../shared/constants/*"]
    }
  },
  "include": ["src", "../shared"]
}
